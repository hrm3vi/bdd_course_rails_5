<h2 class='text-center p-4'>Sign up</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="row p-1">
      <div class="col">
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Email' %>
      </div>
    </div>

    <div class="row p-1">
      <div class="col">
        <%= f.password_field :password,  class: 'form-control', autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
      </div>
    </div>

    <div class="row p-1">
      <div class="col">
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>
    </div>


    <div class="row p-1">
     <div class="col">
        <%= f.submit "Sign Up", class: 'btn btn-outline-primary btn-block' %>
      </div>
    </div>
   

  <% end %>

  <div class="row p-1">
    <div class="col">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>