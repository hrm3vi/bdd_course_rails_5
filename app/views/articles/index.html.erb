<% if @articles.empty? %>

	<h1 style="padding: 1rem;", id="no-articles">No Articles Created</h1>

<% else %>

	<h1 class="text-center", style="padding: 1rem;", id="articles-header">Blog-Blog Articles</h1>
	<container id='article-card-index'>
		<% @articles.each do |article| %>
			<div style="padding-bottom: 1rem;">
				<div class="card">
			  		<div class="card-header">
			  	  		<%= link_to article.title, article_path(article) %>
			  		</div>
			  		<div class="card-body">
			    		<h5 class="card-title"><%= truncate(article.body, length: 500) %></h5>
			    		<small>Created by: <%= article.user.email%></small>
			  		</div>
				</div>
			</div>
		<% end %>
	</container>	

<% end %>

<div class="container" style="padding: 2rem;">
  <div class="row justify-content-center">
    <div class="col-md-1">
		<%= link_to "New Article", new_article_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>