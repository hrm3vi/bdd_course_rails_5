<script>
	$(function () {
	  $('[data-toggle="tooltip"]').tooltip()
	})
</script>

<div class="jumbotron jumbotron-fluid" style="margin-top: 1rem;">
  	<div class="container">
    	<h1 class="display-1"><%= @article.title %></h1>
     	<div class="float-right">
			
			<small>
				<button type="button" class="btn btn-light btn-sm" data-toggle="tooltip" data-placement="top" title="<%= @article.created_at %>">
					<i class="fa fa-calendar"></i>
				</button>
			</small>

			<% if user_signed_in? && current_user == @article.user %>
				<small>
					<%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path(@article), :id => "edit-article", class: "btn btn-primary btn-sm" %>
				</small>
				<small>
					<%= link_to '<i class="fa fa-trash"></i>'.html_safe, article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, :id => "delete-article", class: "btn btn-danger btn-sm" %>
				</small>
			<% end %>

		</div>
  	</div>
</div>

<div class="card" style="margin-top: -1rem;">
  	<div class="card-body bg-warning">
   		<%= @article.body %>
  	</div>
</div>

<div class="card" style="margin-top: 1rem;">
  	<div class="card-body bg-light">
   		<%= form_for [@article, @comment], :html => {class: "form-horizontal", role: "form"} do |f| %>
   			<% if @comment.errors.any? %>
		        <div class="container" style="padding-bottom: 1rem;">
		          <div class="row justify-content-md-center">
		            <div class="col-md-6">

		              <div class="card border-danger">
		                <div class="card-header">
		                  <%= pluralize(@comment.errors.count, "error") %>
		                  prohibited this comment from being created:
		                </div>
		                <ul class="list-group list-group-flush">
		                  <% @comment.errors.full_messages.each do |msg| %>
		                    <li class="list-group-item"><%= msg %></li>
		                  <% end %>
		                </ul>
		              </div>

		            </div>
		          </div>
		        </div>
		     <% end %>
		      <div class="form-group" style="margin-top: 1rem;">
		        <div class="container">
		        	<div class="row justify-content-center">
	              		<div class="control-label col-md-2">
	              			<%= f.label :body, 'New Comment' %>
	            		</div>
		          	</div>
		          	<div class="row">
		            	<div class="control-label col-md-12">
		              		<%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Your comment", autofocus: true %>
		            	</div>
		          	</div>
		        </div>
		      </div>
		      <div class="form-group">
		        <div class="container">
		          <div class="row justify-content-center">
		            <div class="col-md-2">
		              <%= f.submit 'Add Comment', class: "btn btn-primary btn-sm" %>
		            </div>
		          </div>
		        </div>
		      </div>
   		<% end %>
  	</div>
</div>

<div class="card text-white bg-dark mb-3" style="margin: 1rem 0rem;">
  	<div class="card-body">
   		<h2>Comments</h2>
  	</div>
</div>
<% if @article.comments.any? %>
	<% persisted_comments(@comments).each do |comment| %>
		 <div class="card border-secondary mb-3">
			<div class="card-header"><%= comment.body %></div>
			<div class="card-body text-secondary">
				<p class="card-text">by <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %></p>
			</div>
		</div>
	<% end %>
<% end %>

