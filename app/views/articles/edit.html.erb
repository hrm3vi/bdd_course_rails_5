<h1 class="text-center", style="padding: 1rem;", id="no-articles">Edit article</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <% if @article.errors.any? %>
        <div class="container" style="padding-bottom: 1rem;">
          <div class="row justify-content-md-center">
            <div class="col-md-6">

              <div class="card border-danger">
                <div class="card-header">
                  <%= pluralize(@article.errors.count, "error") %>
                  prohibited this article from being created:
                </div>
                <ul class="list-group list-group-flush">
                  <% @article.errors.full_messages.each do |msg| %>
                    <li class="list-group-item"><%= msg %></li>
                  <% end %>
                </ul>
              </div>

            </div>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="container">
          <div class="row">
            <div class="control-label col-md-1">
              <%= f.label :title %>
            </div>
            <div class="control-label col-md-11">
              <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="container">
          <div class="row">
            <div class="control-label col-md-1">
              <%= f.label :body %>
            </div>
            <div class="control-label col-md-11">
              <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Body of article" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-1">
              <%= f.submit class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
